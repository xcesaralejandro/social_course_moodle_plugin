<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/social_course/db" VERSION="20191124" COMMENT="XMLDB file for Moodle local/social_course"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="sc_recipients" COMMENT="relationship of the publication with the recipients">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_publicationid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_to" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timedeleted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_recipients_user" TYPE="foreign" FIELDS="sc_to" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="sc_recipients_sc_publications" TYPE="foreign" FIELDS="sc_publicationid" REFTABLE="sc_publications" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="sc_notifications" COMMENT="notifications of likes, comments or things shared with me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_title" TYPE="char" LENGTH="150" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_description" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_type" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_publicationid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_groupid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timeviewed" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_notifications_sc_publications" TYPE="foreign" FIELDS="sc_publicationid" REFTABLE="sc_publications" REFFIELDS="id"/>
        <KEY NAME="sc_notifications_sc_groups" TYPE="foreign" FIELDS="sc_groupid" REFTABLE="sc_groups" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sc_type" UNIQUE="false" FIELDS="sc_type" HINTS="sctype"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="sc_comments" COMMENT="Comments on the publications">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_content" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="sc_publicationid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_authorid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timedeleted" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_comments_user" TYPE="foreign" FIELDS="sc_authorid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="sc_comments_sc_publications" TYPE="foreign" FIELDS="sc_publicationid" REFTABLE="sc_publications" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="sc_publications" COMMENT="publications generated by different users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_courseid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_authorid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_comment" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="sc_groupid_shared" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="id of group selected in preselection"/>
        <FIELD NAME="sc_roleid_shared" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="id of role selected in preselection"/>
        <FIELD NAME="sc_type_shared" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="all, group, custom"/>
        <FIELD NAME="sc_name_shared" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timecreated" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timedeleted" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_publications_course" TYPE="foreign" FIELDS="sc_courseid" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="sc_publications_user" TYPE="foreign" FIELDS="sc_authorid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sc_timecreated" UNIQUE="false" FIELDS="sc_timecreated" HINTS="sctimecreated"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="sc_module_mentions" COMMENT="The platform modules that have been mentioned">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_publicationid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_cmid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timedeleted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_module_mentions_sc_publications" TYPE="foreign" FIELDS="sc_publicationid" REFTABLE="sc_publications" REFFIELDS="id"/>
        <KEY NAME="sc_module_mentions_course_module" TYPE="foreign" FIELDS="sc_cmid" REFTABLE="course_modules" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="sc_likes" COMMENT="Like to publications and comments">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_publicationid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_author" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_liked" TYPE="binary" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_component" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_likes_sc_publications" TYPE="foreign" FIELDS="sc_publicationid" REFTABLE="sc_publications" REFFIELDS="id"/>
        <KEY NAME="sc_likes_user" TYPE="foreign" FIELDS="sc_author" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sc_component" UNIQUE="false" FIELDS="sc_component" HINTS="sccomponent"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="sc_files" COMMENT="files upload in social course plugin">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sc_publicationid" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="sc_contextid" TYPE="int" LENGTH="5" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_component" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_filearea" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_filepath" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_filename" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_mimetype" TYPE="char" LENGTH="1333" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sc_timedeleted" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sc_publicationid" TYPE="foreign" FIELDS="sc_publicationid" REFTABLE="sc_publications" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="sc_timecreated" UNIQUE="false" FIELDS="sc_timecreated" HINTS="sctimecreated"/>
        <INDEX NAME="sc_timedeleted" UNIQUE="false" FIELDS="sc_timedeleted" HINTS="sctimedeleted"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>